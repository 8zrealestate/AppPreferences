<?xml version="1.0" encoding="UTF-8" ?>
<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.simonmacdonald.prefs"
    version="1.0.0">
  <engines>
    <engine name="cordova" version=">=2.9.0" />
  </engines>

  <name>Android Preferences Access Plugin</name>
  <js-module src="applicationPreferences.js" name="preferences">
	      <clobbers target="preferences" />
  </js-module>
  <platform name="android">
	  <source-file src="src/com/simonmacdonald/prefs/AppPreferences.java" target-dir="src/com/simonmacdonald/prefs/" />

	  <config-file target="res/xml/config.xml" parent="/widget/plugins">
		  <plugin name="applicationPreferences" value="com.simonmacdonald.prefs.AppPreferences"/>
    </config-file>
  </platform>
</plugin>
